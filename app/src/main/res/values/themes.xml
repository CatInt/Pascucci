<resources>
    <!-- Base application theme. -->
    <style name="Theme.Pascucci" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/translucent</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineHeight">16dp</item>
        <item name="android:background">@drawable/search_view_background</item>
        <item name="android:backgroundTint">@color/search_view_background_color</item>
        <item name="queryHint">@string/hint_input_destination</item>
        <item name="iconifiedByDefault">false</item>
        <item name="queryBackground">@null</item>
        <item name="searchIcon">@drawable/ic_search</item>
        <item name="theme">@style/SearchViewTheme</item>
    </style>

    <style name="SearchViewTheme">
        <item name="colorSecondary">@color/search_view_text_color</item>
        <item name="android:textColorHint">@color/search_view_text_color</item>
        <item name="colorControlNormal">@color/search_view_text_color</item>
    </style>
</resources>