<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    app:layout_anchorGravity="bottom"
    app:umanoAnchorPoint="1"
    app:umanoClipPanel="false"
    app:umanoDragView="@+id/dashboard_container"
    app:umanoFadeColor="@android:color/transparent"
    app:umanoInitialState="collapsed"
    app:umanoOverlay="true"
    app:umanoPanelHeight="@dimen/panel_collapsed_height"
    app:umanoScrollableView="@+id/search_result_view"
    app:umanoShadowHeight="0dp"
    tools:context=".MainActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/home_container"
        android:name="io.pascucci.ui.home.HomeFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/dashboard_container"
        android:layout_width="match_parent"
        android:layout_height="480dp" />

</com.sothree.slidinguppanel.SlidingUpPanelLayout>